<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/class_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/class_text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/class_image_view"
        android:layout_below="@id/class_image_view"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/class_text_view_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/class_image_view"
        android:layout_below="@id/class_image_view"
        android:textColor="#aaaaaa"
        android:textSize="16dp" />

</RelativeLayout>